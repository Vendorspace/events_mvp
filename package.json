    "cors": "^2.8.4",
    "dotenv": "^5.0.1",
    "express": "^4.14.1",
    "fuse.js": "^3.2.1",
    "jsonwebtoken": "^8.2.1",
    "mongoose": "^5.0.4",
    "nodemailer": "^4.6.5",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "validator": "^10.1.0"
  },
  "keywords": [
    "node",
    "heroku",
    "create-react-app",
    "react"
  ],
  "license": "MIT",
  "devDependencies": {
    "jest": "^23.5.0",
    "jest-enzyme": "^6.0.3"
